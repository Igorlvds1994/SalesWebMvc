@model IEnumerable<IGrouping<SalesWebMvc.Models.Department, SalesWebMvc.Models.SalesRecord>>

@{
    ViewData["Title"] = "Grouping Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <label for="minDate">Min Date</label>
                <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
            </div>
            <div class="form-group">
                <label for="maxDate">Max Date</label>
                <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
            </div>
            <button type="submit" class="btn btn-primary">Filter</button>
        </form>
    </div>
</nav>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Grouped Sales</h3>
    </div>
    <div class="panel-body">
        @foreach (var group in Model)

        {
            <h4>Department: @group.Key.Name</h4>
            <h5>Total sales for this department: @group.Sum(s => s.Amount).ToString("F2")</h5> <!-- Aqui soma o total de vendas -->

            <table class="table table-striped table-hover">
                <thead>
                    <tr class="success">
                        <th>@Html.DisplayNameFor(model => group.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => group.First().Date)</th>
                        <th>@Html.DisplayNameFor(model => group.First().Seller.Name)</th>
                        <th>@Html.DisplayNameFor(model => group.First().Amount)</th>
                        <th>@Html.DisplayNameFor(model => group.First().Status)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in group)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                            <td>@Html.DisplayFor(modelItem => item.Seller.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>